---
import "animate.css";
import "../css/styles.css";
---

<footer
  class="py-4 sm:py-6 bg-black border-t rounded-t-xl h-[410px] z-50 max-sm:h-auto"
  x-data="{expanded: false}"
>
  <div class="grid grid-cols-2 w-full h-full mb-4 max-sm:flex max-sm:flex-col">
    <div class="col-start-1">
      <div
        class="grid grid-cols-2 justify-center items-center max-sm:flex max-sm:flex-row"
      >
        <div
          class="ml-10 col-start-1 flex flex-col justify-center items-center p-4 font-mono bg-black max-md:col-span-2 max-sm:ml-0"
        >
          <form
            action="https://formspree.io/f/meqyywlw"
            method="POST"
            class="w-full max-w-sm"
          >
            <div class="flex flex-col mb-4">
              <label class="uppercase my-1 text-white">Your name:</label>
              <input
                class="border rounded-lg p-2 placeholder:text-[#a4a4a4]"
                type="text"
                name="name"
                placeholder="Your name"
                required
              />
            </div>
            <div class="flex flex-col mb-4">
              <label class="uppercase my-1 text-white">Your email:</label>
              <input
                class="border rounded-lg p-2 placeholder:text-[#a4a4a4]"
                type="email"
                name="email"
                placeholder="Your email"
                required
              />
            </div>
            <div class="flex flex-col mb-4">
              <label class="uppercase my-1 text-white">Your message:</label>
              <textarea
                class="border rounded-lg p-2 placeholder:text-[#a4a4a4]"
                name="message"
                placeholder="Your message"
                required></textarea>
            </div>
            <button
              class="border-2 border-white py-2 px-4 mt-4 rounded-xl text-white hover:bg-white hover:text-black transition-colors"
              type="submit"
            >
              Get in Touch
            </button>
          </form>
        </div>
        <div
          class="col-start-2 social-links flex flex-col justify-center items-center max-md:hidden max-sm:hidden"
        >
          <h1 class="mb-2 mt-4 text-4xl">Contacts</h1>
